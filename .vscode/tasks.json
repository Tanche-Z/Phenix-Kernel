{
    "tasks": [
        {
            "type": "shell", // allow debug assembly
            "label": "C/C++: gcc build active file",
            "command": "",
            "args": [
                "mkdir",
                "-p",
                "${workspaceFolder}/build/test_debug",
                ";",
                "/usr/bin/gcc",
                "-fdiagnostics-color=always",
                "-m32",
                "-g",
                "-I${workspaceFolder}/include",
                "${file}",
                "-o",
                "${workspaceFolder}/build/test_debug/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build 32bits .out file using gcc."
        },
        {
            "type": "shell",
            "label": "nasm: gcc build active file",
            "command": "",
            "args": [
                "mkdir",
                "-p",
                "${workspaceFolder}/build/test_debug",
                ";",
                "/usr/bin/nasm",
                "-f",
                "elf32",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/build/test_debug/${fileBasenameNoExtension}.o",
                ";",
                "/usr/bin/gcc",
                "-fdiagnostics-color=always",
                "-m32",
                "-g",
                "-static",
                "-I${workspaceFolder}/include",
                "${workspaceFolder}/build/test_debug/${fileBasenameNoExtension}.o",
                "-o",
                "${workspaceFolder}/build/test_debug/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build 32bits elf file using nasm & gcc."
